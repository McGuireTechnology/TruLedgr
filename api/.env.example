# TruLedgr API Environment Variables

# Application Settings
APP_NAME="TruLedgr API"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
# For local development with SQLite (async):
DATABASE_URL=sqlite+aiosqlite:///./truledgr.db

# For production with PostgreSQL (async):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/truledgr

DATABASE_ECHO=false

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8000,https://dash.truledgr.app

# API Settings
ALLOWED_HOSTS=*

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
