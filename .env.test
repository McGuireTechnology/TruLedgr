
# =============================================================================
# TEST ENVIRONMENT - Automated testing, CI/CD pipelines
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS (Test)
# =============================================================================
APP_NAME="FastAPI Security (Testing)"
DEBUG=false
ENVIRONMENT="test"

# =============================================================================
# API DOCUMENTATION (Test: ❌ disabled for speed)
# =============================================================================
OPENAPI_ENABLED=false
OPENAPI_AUTH_REQUIRED=false

# =============================================================================
# SECURITY SETTINGS (Test: deterministic, fast)
# =============================================================================
# JWT - Fixed keys for deterministic testing
SECRET_KEY="test-secret-key-fixed-for-deterministic-testing-32-chars-minimum"
ACCESS_TOKEN_EXPIRE_MINUTES=5  # Short for test speed

# OAuth2 (disabled in tests)
OAUTH2_ENABLED=false
OAUTH2_SESSION_SECRET="oauth-test-session-secret-fixed-for-testing-32-chars"
OAUTH2_BASE_URL="http://testserver"

# Social providers (disabled in tests)
GOOGLE_OAUTH2_ENABLED=false
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
MICROSOFT_OAUTH2_ENABLED=false
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
APPLE_OAUTH2_ENABLED=false

# CSRF (disabled for test simplicity)
CSRF_ENABLED=false
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE="lax"

# HTTPS (❌ not required in tests)
REQUIRE_HTTPS=false
HSTS_ENABLED=false

# =============================================================================
# RATE LIMITING & SECURITY (Test: ❌ disabled for speed)
# =============================================================================
RATE_LIMIT_ENABLED=false
MAX_LOGIN_ATTEMPTS=1000
ACCOUNT_LOCKOUT_DURATION_MINUTES=0

# =============================================================================
# DATABASE (Test: in-memory SQLite)
# =============================================================================
DATABASE_URL="sqlite+aiosqlite:///:memory:"
DB_POOL_SIZE=1
DB_MAX_OVERFLOW=0
DB_ECHO=false  # No SQL logging in tests (too verbose)
DB_AUTO_MIGRATE=true

# =============================================================================
# CORS (Test: open for testing)
# =============================================================================
CORS_ORIGINS="http://testserver,http://localhost:3000"

# =============================================================================
# LOGGING (Test: ERROR level only)
# =============================================================================
LOG_LEVEL="ERROR"
LOG_FORMAT="text"
LOG_FILE=""  # No file logging in tests
ENABLE_TRACEBACKS=true

# =============================================================================
# CACHING (Test: ❌ disabled for deterministic tests)
# =============================================================================
CACHE_ENABLED=false
CACHE_MAX_SIZE=10
REDIS_ENABLED=false
REDIS_URL=""

# =============================================================================
# EMAIL/SMS (Test: ❌ disabled/mock)
# =============================================================================
EMAIL_ENABLED=false
EMAIL_MODE="mock"
EMAIL_FROM="test@localhost"
EMAIL_FROM_NAME="FastAPI Auth (Test)"
SMTP_USER=""
SMTP_PASSWORD=""

# =============================================================================
# PAYMENTS/EXTERNAL APIs (Test: mock mode)
# =============================================================================
PAYMENT_MODE="mock"

# =============================================================================
# BACKGROUND JOBS (Test: ❌ disabled for speed)
# =============================================================================
BACKGROUND_TASKS_ENABLED=false
CLEANUP_INTERVAL_MINUTES=0

# =============================================================================
# OBSERVABILITY (Test: ❌ disabled for speed)
# =============================================================================
METRICS_ENABLED=false
PROMETHEUS_ENABLED=false
TRACING_ENABLED=false
TRACING_SERVICE_NAME="fastapi-security-test"
TRACING_SAMPLE_RATE=0.0

# Error reporting (❌ disabled in tests)
ERROR_REPORTING_ENABLED=false
SENTRY_DSN=""

# =============================================================================
# TEST SERVER (Optimized for speed)
# =============================================================================
RELOAD=false
PROXY_HEADERS=false

# Performance thresholds (relaxed for CI)
SLOW_QUERY_THRESHOLD=10.0
SLOW_REQUEST_THRESHOLD=30.0

# =============================================================================
# FRONTEND CONFIGURATION (Test)
# =============================================================================
VITE_API_BASE_URL="http://testserver"
VITE_ENV="test"
VITE_FEATURE_FLAGS="users,groups,items"
VITE_ANALYTICS_ENABLED=false
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_SOURCE_MAPS=false
VITE_SENTRY_DSN=""