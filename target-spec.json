{
  "name": "truledgr-dash",
  "static_sites": [
    {
      "name": "dash",
      "github": {
        "repo": "McGuireTechnology/TruLedgr",
        "branch": "main"
      },
      "build_command": "npm ci --include=dev && npm run build:dash",
      "source_dir": "/",
      "output_dir": "dash/dist",
      "index_document": "index.html",
      "catchall_document": "index.html"
    }
  ],
  "domains": [
    {
      "domain": "dash.truledgr.app",
      "type": "PRIMARY"
    }
  ],
  "region": "nyc",
  "envs": [
    {
      "key": "NODE_ENV",
      "value": "production",
      "scope": "RUN_AND_BUILD_TIME"
    },
    {
      "key": "VITE_API_URL",
      "value": "https://api.truledgr.app",
      "scope": "RUN_AND_BUILD_TIME"
    }
  ],
  "ingress": {
    "rules": [
      {
        "match": {
          "path": {
            "prefix": "/"
          }
        },
        "component": {
          "name": "dash"
        }
      }
    ]
  }
}
