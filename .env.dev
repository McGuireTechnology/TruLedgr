# =============================================================================
# DEVELOPMENT ENVIRONMENT - Local laptops, rapid iteration, debug friendly
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS (Development)
# =============================================================================
APP_NAME="FastAPI Security (Development)"
DEBUG=true
ENVIRONMENT="development"

# =============================================================================
# API DOCUMENTATION (Development: ✅ public)
# =============================================================================
OPENAPI_ENABLED=true
OPENAPI_AUTH_REQUIRED=false

# =============================================================================
# SECURITY SETTINGS (Development: relaxed)
# =============================================================================
# JWT - Long lifetime for development convenience
SECRET_KEY="dev-secret-key-change-this-a-very-long-string-for-development-only-min-32-chars"
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24h for development

# OAuth2 (disabled in development)
OAUTH2_ENABLED=false
OAUTH2_SESSION_SECRET="oauth-dev-session-secret-change-this-min-32-chars"
OAUTH2_BASE_URL="http://localhost:8000"

# Social providers (test credentials)
GOOGLE_OAUTH2_ENABLED=false
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
MICROSOFT_OAUTH2_ENABLED=false
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
APPLE_OAUTH2_ENABLED=false

# CSRF (optional relax for development)
CSRF_ENABLED=false
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE="lax"

# HTTPS (❌ not required in development)
REQUIRE_HTTPS=false
HSTS_ENABLED=false

# =============================================================================
# RATE LIMITING & SECURITY (Development: ❌ disabled/relaxed)
# =============================================================================
RATE_LIMIT_ENABLED=false
MAX_LOGIN_ATTEMPTS=100
ACCOUNT_LOCKOUT_DURATION_MINUTES=1

# =============================================================================
# DATABASE (Development: local, auto-migrate)
# =============================================================================
DATABASE_URL="sqlite+aiosqlite:///./dev.db"
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=0
DB_ECHO=true  # ✅ 100% SQL logging for development
DB_AUTO_MIGRATE=true

# =============================================================================
# CORS (Development: * localhost)
# =============================================================================
CORS_ORIGINS="http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000,http://localhost:5173,http://localhost:5174"

# =============================================================================
# LOGGING (Development: DEBUG level, ✅ full tracebacks)
# =============================================================================
LOG_LEVEL="DEBUG"
LOG_FORMAT="text"
LOG_FILE="logs/dev.log"
ENABLE_TRACEBACKS=true

# =============================================================================
# CACHING (Development: minimal)
# =============================================================================
CACHE_ENABLED=true
CACHE_MAX_SIZE=100
REDIS_ENABLED=false
REDIS_URL="redis://localhost:6379/0"

# =============================================================================
# EMAIL/SMS (Development: console backend)
# =============================================================================
EMAIL_ENABLED=false
EMAIL_MODE="console"
EMAIL_FROM="dev@localhost"
EMAIL_FROM_NAME="FastAPI Auth (Dev)"
SMTP_USER=""
SMTP_PASSWORD=""

# =============================================================================
# PAYMENTS/EXTERNAL APIs (Development: test keys)
# =============================================================================
PAYMENT_MODE="test"

# =============================================================================
# BACKGROUND JOBS (Development: inline optional)
# =============================================================================
BACKGROUND_TASKS_ENABLED=true
CLEANUP_INTERVAL_MINUTES=5

# =============================================================================
# OBSERVABILITY (Development: optional)
# =============================================================================
METRICS_ENABLED=true
PROMETHEUS_ENABLED=false
TRACING_ENABLED=false
TRACING_SERVICE_NAME="fastapi-security-dev"
TRACING_SAMPLE_RATE=0.1

# Error reporting (✅ 100% for development)
ERROR_REPORTING_ENABLED=true
SENTRY_DSN=""

# =============================================================================
# DEVELOPMENT SERVER (Development specific)
# =============================================================================
RELOAD=true  # Auto-reload on code changes
PROXY_HEADERS=false

# Performance thresholds (relaxed)
SLOW_QUERY_THRESHOLD=2.0
SLOW_REQUEST_THRESHOLD=5.0

# =============================================================================
# FRONTEND CONFIGURATION (Development)
# =============================================================================
VITE_API_BASE_URL="http://localhost:8000"
VITE_ENV="development"
VITE_FEATURE_FLAGS="users,groups,items"
VITE_ANALYTICS_ENABLED=false
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_SOURCE_MAPS=true
VITE_SENTRY_DSN=""
